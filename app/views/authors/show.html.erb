<h1><%= @author.name %></h1>

<%= link_to "New Post", new_author_post_path(@author) %>
<p>
  <% if @post.author %>
    <%= link_to @post.author.name, author_path(@post.author) %>
    <%= link_to "Edit Post", edit_author_post_path(@post.author, @post) %>
  <% end %>
</p>
<p>Posts:</p>
<% @author.posts.each do |post| %>
  <div><%= post.title %></div>
<% end %>
